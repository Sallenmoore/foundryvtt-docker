<form class="dnd5e" autocomplete="off">
  <div class="form-group">
    <label class="label">{{localize "BABONUS.ConfigurationConsumptionType"}}</label>
    <div class="form-fields">
      <select name="consume.type">
        {{selectOptions choices selected=clone.consume.type nameAttr="value" labelAttr="label" localize=true blank=""}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="label">{{localize "BABONUS.ConfigurationConsumptionScaling"}}</label>
    <div class="form-fields">
      <input type="checkbox" name="consume.scales" {{checked clone.consume.scales}} {{disabled isEffect}}>
    </div>
  </div>

  <div class="form-group">
    <label class="label">{{localize "BABONUS.ConfigurationConsumptionConsumedValues"}}</label>
    <div class="form-fields">
      <input type="number" data-dtype="Number" name="consume.value.min" value="{{clone.consume.value.min}}" placeholder="{{localize 'Minimum'}}" {{disabled isEffect}}>
      <input type="number" data-dtype="Number" name="consume.value.max" value="{{clone.consume.value.max}}" placeholder="{{localize 'Maximum'}}" {{disabled disableMax}}>
    </div>
  </div>

  {{#if isHealth}}
  <div class="form-group">
    <label class="label">{{localize "BABONUS.ConfigurationConsumptionStep"}}</label>
    <div class="form-fields">
      <input type="number" data-dtype="Number" name="consume.value.step" value="{{clone.consume.value.step}}" placeholder="{{localize 'BABONUS.ConfigurationConsumptionStep'}}" {{disabled disableStep}}>
    </div>
  </div>
  {{/if}}

  <div class="form-group">
    <label class="label">{{localize "BABONUS.ConfigurationConsumptionScalingFormula"}}</label>
    <div class="form-fields">
      <input type="text" name="consume.formula" value="{{clone.consume.formula}}" placeholder="{{localize 'DND5E.Formula'}}" {{disabled disableMax}}>
    </div>
  </div>

  <button type="submit">
    <i class="fa-solid fa-save"></i> {{localize "Save"}}
  </button>
</form>
